    <!-- 検索欄 -->
    <div class="anime-search">
      アニメを探す
    </div>
    <div class="search-forms">
      <form class="forms">
        <div class="search-form">
          <label for="anime-title" class="title">アニメタイトル</label>
          <input type="text" id="anime-title" placeholder="タイトルを入力" class="title-form">
        </div>
        <div class="search-form">
          <label for="genre_id" class="genre">ジャンル</label>
          <input type="text" id="genre_id" class="genre-form">
        </div>
        <div class="search-form">
          <label for="good_point_id" class="good-point">良いところ</label>
          <input type="text" id="good_point_id" class="good-point-form">
        </div>
        <div class="search-form">
          <label for="recommendation_id" class="recommendation">どんな人におすすめか</label>
          <input type="text" id="recommendation_id" class="recommendation-form">
        </div>
        <div class="search-form">
          <input type="submit" value="検索" class="search">
        </div>
      </form>
    </div>

    <!-- アニメ投稿一覧 -->
    <div class="anime-chart-post">
      <div class="charts">
        <div class="anime-chart">アニメ投稿一覧</div>
        <% if user_signed_in? %>
        <%= link_to '新規投稿', new_anime_path, class:"new-post"%>
        <% end %>
      </div>

      <div class="posts">
        <div class="post">
          <div class="edit-end">
            編集済み
          </div>
          <% @animes.each do |anime|%>
          <div class="anime-content">
            <div class="content-header">
              <div class="content-anime-title">
                <div class="content-anime">アニメタイトル</div>
                <%= anime.title %>
              </div>
              <div class="content-netabare-count">
                <div class="netabare">5</div>
                <div class="count">ネタバレカウント</div>
              </div>
            </div>
            <div class="content-middle">
              <%= image_tag anime.image.variant(resize: '200x300'), class: 'content-image' if anime.image.attached? %>
            </div>
            <div class="content-footer">
              <div class="content-genre">ジャンル:</div>
              <%= anime.genre.name %>
              <div class="content-good-point">良いところ:</div>
              <%= anime.good_point.name %>
              <div class="content-recommendation">どんな人におすすめか:</div>
              <%= anime.recommendation.name %>
            </div>
          </div>
          <% end %>
          <div class="user-name">
            投稿者名
          </div>
          
        </div>

      </div>
    </div>
