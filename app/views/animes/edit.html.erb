    <!-- 編集画面 -->
    <div class="new-anime">
      <div class="new-anime-posts">
        <div class="new-anime-post">投稿内容を変更</div>
        <div class="new-anime-post-form">
        <%= form_with model: @anime, local: true do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
          <div class="new-form">
            <%= f.label :title, "アニメタイトル" %><br />
            <%= f.text_field :title, id:"anime-title", class: "new-anime-title" %>
          </div>
          <div class="new-form">
            <%= f.label :image, "アニメ画像" %><br>
            <%= f.file_field :image, id:"anime-image", class: "new-anime-image" %>
          </div>
          <div class="new-form">
            <%= f.label :synopsis, "あらすじ" %><br />
            <%= f.text_area :synopsis, id:"anime-synopsis", class: "new-anime-synopsis" %>
          </div>
          <div class="new-form">
            <%= f.label :genre_id, "ジャンル" %><br />
            <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "new-anime-genre" %>
          </div>
          <div class="new-form">
            <%= f.label :good_point_id, "良いところ" %><br />
            <%= f.collection_select :good_point_id, GoodPoint.all, :id, :name, class: "new-anime-good_point" %>
          </div>
          <div class="new-form">
            <%= f.label :recommendation_id, "どんな人におすすめか" %><br />
            <%= f.collection_select :recommendation_id, Recommendation.all, :id, :name, class: "new-anime-recommendation" %>
          </div>
          <div class="new-form">
            <%= f.label :text, "アニメを観た感想" %><br />
            <%= f.text_area :text, id:"anime-text", class: "new-anime-text" %>
          </div>
          <div class="new-form">
            <%= f.submit "編集" ,class:"new-anime-submit" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>