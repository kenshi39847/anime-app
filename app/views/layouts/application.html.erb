<!DOCTYPE html>
<html>
  <head>
    <title>AnimeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.css">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <!-- ヘッダー -->
    <header class="header">
      <div class="app-name"><a href="/">App Name</a></div>
      <% if user_signed_in? %>
        <div class="header-lists">
          <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "log-out" %>
          <%= link_to current_user.name, root_path %>
        </div>
      <% else %>
        <div class="header-lists">
          <%= link_to "ログイン", new_user_session_path, class: "log-in" %>
          <%= link_to "新規登録", new_user_registration_path, class: "sign-up" %>
        </div>
      <% end %>
    </header>

    <%= yield %>

  </body>
</html>
